// Mixins

control() {
    border: 1px solid black;
    padding: 6px 10px;
    border-radius: 5px;
}

size(x) {
    height: x;
    width: x;
}

// Variables

$light-grey = #eee;
$main-margin = 20px;

// Fonts

@font-face {
    font-family: 'Open Sans';
    src: url('./fonts/OpenSans-Regular.ttf');
}

// Overrides

html {
    font-family: 'Open Sans', sans-serif;
}

body {
    margin: 0;
}

html, body {
    height: 100%;
}


button {
    control();
    background: white;

    &:hover {
        cursor: pointer;
        background-color: $light-grey;
    }
}

input[type="text"] {
    control();
    display: block;
    box-sizing: border-box;
}

select {
    control();
}

// Custom

.container {
    position: absolute;
    height: auto;
    bottom: 0;
    top: 0;
    margin: $main-margin;
}

.info-span {
    size(20px);
    display: inline-block;
    background-color: blue;
    opacity: 0.5;
    color: white;
    text-align: center;
    border-radius: 45px;

    &:hover {
        opacity: 1;
        cursor: pointer;
    }
}

// Modal

.modal {
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);

    &-dialog {
        background-color: white;
    }

    & &-dialog {
        width: 40%;
    }

    &-header,
    &-body,
    &-footer {
        padding: 10px;
    }

    &-header {
        border-bottom: 1px solid black;
    }

    &-footer {
        border-top: 1px solid black;
    }

    &-control {
        width: 100%;
        background-color: $light-grey;

        &:not(:last-child) {
            margin-bottom: 10px;
        }
    }
}

// Tasks

.priority-normal {}
.priority-medium {
    background-color: orange;
    border-color: orange;
}
.priority-high {
    background-color: red;
    background-color: red;
}

.task-selected {
    opacity: 0.5;
    border: 2px solid black;
}

// Icons

.fc-icon-calendar {
    background: url('./icons/save.png');
    filter: invert(1);
    background-size: 24px;
}

// Flex

.flex {
    display: flex;

    &_between {
        justify-content: space-between;
    }

    &__spacer {
        flex: 1;
    }

    &__item:not(:last-child) {
        margin-right: 10px;
    }
}
